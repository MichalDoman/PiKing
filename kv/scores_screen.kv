<MenuArrowButton@MDIconButton>:
    md_bg_color: 0, 0, 0, 0
    pos_hint: {"center_x": 0.08, "center_y": 0.95}
    icon: "arrow-left"
    theme_text_color: "Custom"
    text_color: settings.white
    user_font_size: "35dp"
    ripple_alpha: 0
    on_release:
        root.parent.manager.transition.direction = "right"
        root.parent.manager.transition.duration = 0.4
        root.parent.manager.current = 'main_menu'

<BackToMenu@Label>:
    text: 'return'
    color: settings.white
    font_size: dp(25)
    font_name: "fonts/font_1.ttf"
    pos_hint: {"center_x": 0.2, "center_y": 0.953}

<Category@Label>:
    color: settings.white
    font_size: dp(50)
    font_name: "fonts/font_1.ttf"
    pos_hint: {"center_x": 0.5, "center_y": 0.84}

<ArrowButton@MDIconButton>:
    md_bg_color: 0, 0, 0, 0
    theme_text_color: "Custom"
    text_color: settings.white
    user_font_size: "50dp"

<MainScore@Label>:
    color: settings.white
    font_size: dp(40)
    font_name: "fonts/font_1.ttf"
    pos_hint: {"center_x": 0.5, "center_y": 0.71}
    size: self.size
    halign: "center"

<ScoreLabel@Label>:
    color: settings.white
    font_size: dp(25)
    font_name: "fonts/font_1.ttf"
    size: self.size
    halign: "left"