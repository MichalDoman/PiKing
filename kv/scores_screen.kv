#:import settings settings

<ScoresScreen>:
    on_pre_enter: root.update_scores()
    canvas.before:
        Color:
            rgb: settings.violet_red
        Rectangle:
            size: self.size
        Color:
            rgba: settings.dark_violet_red
        Rectangle:
            size: self.width, self.height * 0.1
            pos: 0, self.height * 0.9
        Color:
            rgba: settings.blue
        Line:
            points: 0, 0, 0, self.height
            width: 15
        Color:
            rgba: settings.yellow
        Line:
            points: self.width, 0, self.width, self.height
            width: 15
        Color:
            rgba: settings.dark_blue
        Line:
            points: 0, self.height * 0.914, 0, self.height
            width: 15
        Color:
            rgba: settings.dark_yellow
        Line:
            points: self.width, self.height * 0.914, self.width, self.height
            width: 15
        Color:
            rgba: settings.grey
        Line:
            points: 0, self.height * 0.9, self.width, self.height * 0.9
            width: 4
        Color:
            rgba: settings.white
        Line:
            points: self.width * 0.17, self.height * 0.77, self.width * 0.83, self.height * 0.77
            width: 2

    MenuArrowButton:

    BackToMenu:

    Category:
        text: 'Most Decimals'

    ArrowButton:
        pos_hint: {"center_x": 0.08, "center_y": 0.84}
        icon: "arrow-left-bold-outline"
        on_release:
            root.manager.transition.direction = "right"
            root.manager.transition.duration = 0.5
            root.manager.current = 'scores_screen_4'

    ArrowButton:
        pos_hint: {"center_x": 0.92, "center_y": 0.84}
        icon: "arrow-right-bold-outline"
        on_release:
            root.manager.transition.direction = "left"
            root.manager.transition.duration = 0.5
            root.manager.current = 'scores_screen_2'

    MainScore:
        text: root.decimals_label
    ScoreLabel:
        text: root.points_label
        pos_hint: {"center_x": 0.5, "center_y": 0.63}
    ScoreLabel:
        text: root.mistakes_label
        pos_hint: {"center_x": 0.5, "center_y": 0.58}
    ScoreLabel:
        text: root.efficacy_label
        pos_hint: {"center_x": 0.5, "center_y": 0.53}

    ScoreLabel:
        text: root.longest_combo_label
        pos_hint: {"center_x": 0.5, "center_y": 0.48}
    ScoreLabel:
        text: root.extra_points_label
        pos_hint: {"center_x": 0.5, "center_y": 0.43}
    ScoreLabel:
        text: root.combo_click_time_label
        pos_hint: {"center_x": 0.5, "center_y": 0.38}
    ScoreLabel:
        text: root.combo_time_label
        pos_hint: {"center_x": 0.5, "center_y": 0.33}

    ScoreLabel:
        text: root.overall_click_time_label
        pos_hint: {"center_x": 0.5, "center_y": 0.28}
    ScoreLabel:
        text: root.overall_time_label
        pos_hint: {"center_x": 0.5, "center_y": 0.23}
    ScoreLabel:
        text: root.digits_per_minute_label
        pos_hint: {"center_x": 0.5, "center_y": 0.18}

    ScoreLabel:
        text: root.date_label
        pos_hint: {"center_x": 0.5, "center_y": 0.13}

